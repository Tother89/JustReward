<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YM_App.Views.RewardPage"
             Title="Manage Reward">
    <ContentPage.Content>
        <AbsoluteLayout>
            <FlexLayout Direction="Column" Grow="1" VerticalOptions="FillAndExpand" >
                <FlexLayout Direction="Row" FlexLayout.Basis="10%" BackgroundColor="Green" JustifyContent="SpaceEvenly">
                    <Button Text="+" TextColor="White" Background="Blue" Padding="20"></Button>
                    <Button Text="-" TextColor="White" Background="Blue" Padding="20"></Button>
                </FlexLayout>
                <Label Text="Reward" FontSize="Medium" TextColor="DarkSlateGray" FlexLayout.Basis="5%"></Label>
                <FlexLayout Direction="Row" FlexLayout.Basis="10%" BackgroundColor="Yellow">
                    <Entry x:Name="RewardInput" Background="Black" TextColor="White" FlexLayout.Grow="1"></Entry>
                </FlexLayout>

                <ListView x:Name="RewardList" ItemsSource="{Binding Rewards}" FlexLayout.Basis="60%" BackgroundColor="Orange">

                </ListView>

            </FlexLayout>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>